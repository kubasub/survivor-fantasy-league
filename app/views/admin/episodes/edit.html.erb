<h2>Edit Episode</h2>

<%= form_for @episode, url: admin_episode_path(@episode) do |f| %>
  <div class="form-group">
    <label>Episode Number</label>
    <%= f.number_field :number, class: "form-control", readonly: true %>
  </div>

  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <%= f.submit "Update Episode", class: "btn btn-primary" %>
<% end %>
