<% if flash.present? %>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= flash_class(key) %>">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <% if key == 'form_error' %>
        <strong><%= value.fetch(:message)%></strong>
        <ul>
          <% value.fetch(:errors).each do |error_message| %>
            <li><%= error_message %></li>
          <% end %>
        </ul>
      <% else %>
        <%= value %>
      <% end %>
    </div>
  <% end %>
<% end %>
