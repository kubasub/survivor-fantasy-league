<h2>Standings</h2>
<hr/>
<% @teams.each.with_index(1) do |team, rank| %>
  <table>
    <tr>
      <td><%= rank.ordinalize %></td>
      <td><%= team.name %></td>
      <td><%= team.points %> <%= "Point".pluralize(team.points) %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= team.castaways.map(&:first_name).join(", ") %></td>
      <td></td>
    </tr>
  </table>
<% end %>
