<div class="row mt-2">
  <div class="col">
    <h2>Standings</h2>
  </div>
  <div class="col">
    <%= link_to "ðŸ“Š&nbsp;&nbsp;Scoring Breakdown".html_safe, scoring_breakdown_path, class: "float-right" %>
  </div>
</div>
<hr/>
<% @teams.each.with_index(1) do |team, rank| %>
  <div class="container">
    <div class="row">
      <div class="col-1">
        <h2><%= rank.ordinalize %></h2>
      </div>
      <div class="col-9">
        <div class="row">
          <div class="col">
            <h4><%= team.name %></h4>
          </div>
        </div>
        <div class="row">
          <% team.castaways.each do |castaway| %>
            <div class="col d-flex" style="flex-direction: column; align-items: center">
              <%= image_tag castaway.headshot_url, class: "rounded-circle d-flex", width: "100px", height: "100px" %>
              <small class="d-flex"><%= castaway.full_name %></small>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-2">
        <h4><%= team.points %> <small class="text-muted"><%= "Pt".pluralize(team.points) %></small></h4>
      </div>
    </div>
  </div>
  <hr/>
<% end %>

